<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eventChoice">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="61dp"
            android:layout_height="66dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton"
            app:rippleColor="#D33939"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="@+id/my_list"
            android:layout_marginTop="640dp"
            app:layout_constraintStart_toStartOf="@+id/my_list"
            android:layout_marginStart="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/my_list"
            android:layout_marginBottom="30dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="128dp"
            tools:layout_editor_absoluteX="-16dp"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>